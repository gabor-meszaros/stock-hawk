<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Activity Stock Details -->

    <style name="StockDetailsSymbolTextStyle" parent="StockSymbolTextStyle">
    </style>

    <style name="StockDetailsPriceTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="StockDetailsChangeTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/price_change_background_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/price_change_background_horizontal_padding</item>
    </style>

    <!-- Widget Stock List -->

    <style name="WidgetStockLisListStyle">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="WidgetStockListStockSymbolTextStyle" parent="StockSymbolTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="WidgetStockLisBidPriceTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="WidgetStockListPercentChangeTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WidgetStockListMessageStyle">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/widget_stock_list_error_no_stocks</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
